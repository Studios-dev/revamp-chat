<!-- Public Profile Section -->
<section class="flex flex-col md:flex-row items-center justify-between gap-12 py-20 px-6 max-w-7xl mx-auto">
  <div class="flex-1 space-y-6">
    <h2 class="text-3xl md:text-5xl font-bold leading-tight">Create a public profile</h2>
    <p class="text-white/70 text-lg leading-relaxed">
      Create a customizable, shareable profile with links and descriptions. Let people reach out, start chats, request info, or schedule calls directly without juggling Gmail, Slack, Calendly, or scattered links.
    </p>
    <a href="#" class="inline-flex items-center text-[#6DE4D4] font-semibold hover:tracking-wide transition-all">
       Claim your handle ->
    </a>
  </div>

  <div class="flex-1 w-full flex justify-center perspective-1000">
     <!-- Mock Profile Card -->
     <div class="relative w-full max-w-md bg-[#18181b] rounded-[2rem] border border-white/5 p-6 shadow-2xl rotate-y-[-5deg] rotate-x-[5deg] hover:rotate-0 transition-transform duration-500 ease-out group">
        <!-- Shine effect -->
        <div class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent rounded-[2rem] pointer-events-none"></div>

        <!-- Banner -->
        <div class="h-32 w-full bg-gradient-to-r from-pink-500/20 to-purple-600/20 rounded-2xl mb-12 relative overflow-hidden">
             <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20"></div>
        </div>

        <!-- Avatar -->
        <div class="absolute top-24 left-1/2 -translate-x-1/2">
            <div class="size-24 rounded-full bg-[#18181b] p-1.5">
                <img src="https://api.dicebear.com/9.x/micah/svg?seed=Rachel" class="w-full h-full rounded-full bg-zinc-800 object-cover" alt="Profile" />
            </div>
        </div>

        <!-- Info -->
        <div class="text-center mt-2 space-y-1">
            <h3 class="text-xl font-bold">Rachel Designer</h3>
            <p class="text-sm text-zinc-400">@rachel.design</p>
            <p class="text-sm text-zinc-300 mt-2">Product Designer building neat things. Let's chat about pixels!</p>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 flex flex-col gap-3">
            <button class="w-full bg-white text-black font-semibold py-3 rounded-xl hover:bg-gray-200 transition">Message Me</button>
            <div class="flex gap-3">
                <button class="flex-1 bg-zinc-800 text-white font-medium py-3 rounded-xl border border-white/5 hover:bg-zinc-700 transition">Schedule</button>
                <button class="flex-1 bg-zinc-800 text-white font-medium py-3 rounded-xl border border-white/5 hover:bg-zinc-700 transition">Socials</button>
            </div>
        </div>
        
     </div>
  </div>
</section>
